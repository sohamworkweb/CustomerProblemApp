<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Input Fields -->
        <EditText
            android:id="@+id/edtCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/customer_name"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="text"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/product_name"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="text"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtProblem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/problem"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone_number"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="phone"
            android:maxLength="10"
            android:digits="0123456789"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtQueryPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/query_person"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="text"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtEngineerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/engineer_name"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="text"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/status"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="text"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:layout_marginBottom="20dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_problem"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple_500"
            android:padding="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp" />
    </LinearLayout>
</ScrollView>
